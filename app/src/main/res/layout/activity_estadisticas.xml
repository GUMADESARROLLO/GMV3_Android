                            app:fontFamily="sans-serif-medium" />

                        <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_height="20dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:tint="@color/colorAccent"
